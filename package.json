{
  "name": "bootstrap-touchspin",
  "version": "4.8.0",
  "title": "Bootstrap Touchspin",
  "description": "A mobile and touch friendly input spinner component for Bootstrap 3, 4 & 5.",
  "private": true,
  "keywords": [
    "input",
    "bootstrap",
    "number",
    "range",
    "spinbutton",
    "spinner"
  ],
  "author": {
    "name": "István Ujj-Mészáros",
    "url": "https://github.com/istvan-ujjmeszaros"
  },
  "main": "dist/index.cjs",
  "license": "MIT",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git"
  },
  "homepage": "https://www.virtuosoft.eu/code/bootstrap-touchspin/",
  "demo": "https://www.virtuosoft.eu/code/bootstrap-touchspin/",
  "docs": "https://www.virtuosoft.eu/code/bootstrap-touchspin/",
  "download": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/archive/master.zip",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/jquery": "^3.5.30",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^8.0.0",
    "jiti": "2.5.1",
    "nyc": "^17.1.0",
    "playwright": "^1.54.2",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.43.0",
    "v8-to-istanbul": "^9.3.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.2.3"
  },
  "scripts": {
    "dev": "vite --port 8866 --strictPort",
    "dev:force": "node scripts/dev-force.mjs",
    "preview": "vite preview --port 8866 --strictPort",
    "build": "npm run -ws --if-present build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "inspect": "node scripts/inspect.mjs",
    "test": "playwright test --project=chromium --reporter=list",
    "test:watch": "playwright test --project=chromium --ui",
    "test:dev": "concurrently -k -s first -n dev,test \"yarn dev\" \"yarn test:watch\"",
    "dev:test": "yarn test:dev",
    "test:headed": "playwright test --project=chromium --headed",
    "test:ui": "playwright test --project=chromium --ui",
    "test:debug": "PWDEBUG=1 playwright test --project=chromium --headed",
    "coverage": "COVERAGE=1 playwright test --config=playwright-coverage.config.ts",
    "coverage:merge": "nyc merge reports/istanbul-json .nyc_output/coverage.json",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov --reporter=json --report-dir reports/coverage --check-coverage=false || true",
    "coverage:open": "wslview reports/coverage/index.html || explorer.exe $(wslpath -w reports/coverage/index.html) || open reports/coverage/index.html",
    "coverage:build": "yarn workspace @touchspin/core build && yarn workspace @touchspin/jquery-plugin build && yarn workspace @touchspin/renderer-bootstrap5 build",
    "coverage:preview": "vite preview --port 8866 --strictPort",
    "dev:bootstrap3": "yarn workspace @touchspin/renderer-bootstrap3 dev",
    "dev:bootstrap4": "yarn workspace @touchspin/renderer-bootstrap4 dev",
    "dev:bootstrap5": "yarn workspace @touchspin/renderer-bootstrap5 dev",
    "dev:tailwind": "yarn workspace @touchspin/renderer-tailwind dev",
    "dev:vanilla": "yarn workspace @touchspin/vanilla-renderer dev",
    "dev:web-component": "yarn workspace @touchspin/web-component dev",
    "coverage:check": "nyc check-coverage --lines=80 --functions=80 --branches=80 --statements=80",
    "coverage:all": "node scripts/coverage-all.mjs",
    "coverage:all:ci": "node scripts/coverage-all.mjs --no-open",
    "guard:no-src-in-tests": "node scripts/guard-no-src-in-tests.mjs",
    "postinstall": "husky install"
  },
  "workspaces": [
    "packages/*",
    "packages/renderers/*"
  ],
  "dependencies": {
    "@touchspin/jquery-plugin": "workspace:*",
    "ci": "^2.3.0"
  },
  "packageManager": "yarn@4.9.4"
}
