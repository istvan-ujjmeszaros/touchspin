{
  "name": "bootstrap-touchspin",
  "version": "4.8.0",
  "title": "Bootstrap Touchspin",
  "description": "A mobile and touch friendly input spinner component for Bootstrap 3, 4 & 5.",
  "private": true,
  "keywords": [
    "input",
    "bootstrap",
    "number",
    "range",
    "spinbutton",
    "spinner"
  ],
  "author": {
    "name": "István Ujj-Mészáros",
    "url": "https://github.com/istvan-ujjmeszaros"
  },
  "main": "dist/jquery.bootstrap-touchspin.js",
  "license": "MIT",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git"
  },
  "homepage": "https://www.virtuosoft.eu/code/bootstrap-touchspin/",
  "demo": "https://www.virtuosoft.eu/code/bootstrap-touchspin/",
  "docs": "https://www.virtuosoft.eu/code/bootstrap-touchspin/",
  "download": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/archive/master.zip",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-arrow-functions": "^7.27.1",
    "@babel/plugin-transform-block-scoping": "^7.28.0",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/express": "^5.0.0",
    "@types/node": "^24.3.0",
    "autoprefixer": "^10.4.21",
    "c8": "^8.0.1",
    "clean-css": "^5.3.3",
    "eslint": "^9.33.0",
    "express": "^4.21.2",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "nyc": "^17.1.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "rollup": "^4.46.2",
    "terser": "^5.43.1",
    "typescript": "^5.7.2",
    "v8-to-istanbul": "^9.2.0"
  },
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:headed": "playwright test --project=chromium --headed",
    "test:ui": "playwright test --project=chromium --ui",
    "test:coverage": "npm test && nyc report --reporter=text-summary --temp-dir=reports/coverage && nyc report --reporter=html --temp-dir=reports/coverage --report-dir=reports/coverage/html && nyc report --reporter=lcovonly --temp-dir=reports/coverage --report-dir=reports/coverage",
    "test:report": "playwright show-report reports/playwright --port 0",
    "coverage:open": "open reports/coverage/html/index.html || start reports/coverage/html/index.html || xdg-open reports/coverage/html/index.html",
    "lint": "eslint src/ build.mjs check-build-integrity.mjs",
    "build": "rollup -c && node scripts/build-css.mjs",
    "build:legacy": "node build.mjs",
    "build:watch": "rollup -c --watch",
    "check-build-integrity": "node check-build-integrity.mjs",
    "dev": "node scripts/serve.mjs",
    "preview": "node scripts/serve.mjs",
    "test:visual": "playwright test --project=visual-tests",
    "test:visual:update": "playwright test --project=visual-tests --update-snapshots",
    "test:visual:ui": "playwright test --project=visual-tests --ui",
    "test:visual:headed": "playwright test --project=visual-tests --headed",
    "test:visual:report": "playwright show-report reports/playwright",
    "test:json": "node scripts/test-json.mjs --project=chromium",
    "test:json:tailwind": "node scripts/test-json.mjs __tests__/tailwindRenderer.test.ts --project=chromium --output reports/json/tailwind.json",
    "test:debug": "PWDEBUG=1 playwright test --project=chromium --headed",
    "test:debug:tailwind": "PWDEBUG=1 playwright test __tests__/tailwindRenderer.test.ts --project=chromium"
  },
  "workspaces": [
    "packages/*",
    "packages/renderers/*"
  ],
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "ci": "^2.3.0"
  }
}
