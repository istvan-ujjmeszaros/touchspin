{
  "name": "@touchspin/web-component",
  "version": "1.0.0",
  "description": "TouchSpin Web Component - Standards-based custom element for framework-agnostic usage",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../scripts/static-server.mjs",
    "build": "rm -rf dist && yarn run build:types && yarn run build:js",
    "build:js": "tsup src/index.ts --format esm --sourcemap --target es2020 --tsconfig tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:test": "tsc -p tsconfig.testbuild.json && node ../../scripts/write-artifacts-manifest.mjs --dir devdist esmEntry=index.js",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "keywords": [
    "touchspin",
    "spinner",
    "number-input",
    "web-components",
    "custom-elements",
    "framework-agnostic"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "dependencies": {
    "@touchspin/core": "workspace:*",
    "@touchspin/renderer-vanilla": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.7.4",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/web-component"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/web-component#readme"
}
