{
  "name": "@touchspin/web-component",
  "version": "4.8.0",
  "description": "TouchSpin Web Component - Standards-based custom element for framework-agnostic usage",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "src/",
    "dist/",
    "README.md"
  ],
  "scripts": {
    "dev": "vite --port 8866 --strictPort --open packages/web-component/example/index.html",
    "build": "vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "touchspin",
    "spinner",
    "number-input",
    "web-components",
    "custom-elements",
    "framework-agnostic"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "dependencies": {
    "@touchspin/core": "workspace:*",
    "@touchspin/vanilla-renderer": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/web-component"
  }
}
