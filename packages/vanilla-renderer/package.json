{
  "name": "@touchspin/vanilla-renderer",
  "version": "1.0.0",
  "description": "Vanilla CSS-based renderer for TouchSpin components without framework dependencies",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/touchspin-vanilla.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./css": "./dist/touchspin-vanilla.css",
    "./themes/vanilla": "./src/themes/vanilla.css"
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --port 8866 --strictPort --open packages/vanilla-renderer/example/index.html",
    "build": "vite build && mkdir -p dist && cp src/themes/vanilla.css dist/touchspin-vanilla.css",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "touchspin",
    "spinner",
    "input",
    "renderer",
    "css",
    "vanilla",
    "accessibility",
    "framework-agnostic"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/bootstrap-touchspin.git",
    "directory": "packages/vanilla-renderer"
  },
  "bugs": {
    "url": "https://github.com/your-org/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/your-org/bootstrap-touchspin/tree/main/packages/vanilla-renderer#readme"
}
