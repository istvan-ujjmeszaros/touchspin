{
  "name": "@touchspin/vanilla-renderer",
  "version": "1.0.0",
  "description": "Vanilla CSS-based renderer for TouchSpin components without framework dependencies",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/touchspin-vanilla.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.cjs"
    },
    "./css": "./dist/touchspin-vanilla.css",
    "./themes/vanilla": "./src/themes/vanilla.css"
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./css": "./dist/touchspin-vanilla.css",
      "./themes/vanilla": "./src/themes/vanilla.css"
    }
  },
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../scripts/static-server.mjs",
    "build": "echo 'Use root build:prod'",
    "build:test": "tsc -p tsconfig.testbuild.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "watch:css": "sass src/themes/vanilla.css dist/touchspin-vanilla.css --style=expanded --source-map --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "touchspin",
    "spinner",
    "input",
    "renderer",
    "css",
    "vanilla",
    "accessibility",
    "framework-agnostic"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/vanilla-renderer"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/vanilla-renderer#readme"
}
