{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./devdist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "types": [],
    "incremental": true,
    "tsBuildInfoFile": "./devdist/.tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@touchspin/core": ["../../core/devdist/index.d.ts", "../../core/dist/index.d.ts"],
      "@touchspin/core/renderer": [
        "../../core/devdist/renderer.d.ts",
        "../../core/dist/renderer.d.ts"
      ],
      "@touchspin/renderer-bootstrap3": [
        "../../renderers/bootstrap3/devdist/index.d.ts",
        "../../renderers/bootstrap3/dist/index.d.ts"
      ],
      "@touchspin/renderer-bootstrap4": [
        "../../renderers/bootstrap4/devdist/index.d.ts",
        "../../renderers/bootstrap4/dist/index.d.ts"
      ],
      "@touchspin/renderer-bootstrap5": [
        "../../renderers/bootstrap5/devdist/index.d.ts",
        "../../renderers/bootstrap5/dist/index.d.ts"
      ],
      "@touchspin/renderer-tailwind": [
        "../../renderers/tailwind/devdist/index.d.ts",
        "../../renderers/tailwind/dist/index.d.ts"
      ],
      "@touchspin/renderer-vanilla": [
        "../../renderers/vanilla/devdist/index.d.ts",
        "../../renderers/vanilla/dist/index.d.ts"
      ]
    }
  },
  "include": ["src/**/*"]
}
