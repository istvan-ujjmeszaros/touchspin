{
  "name": "@touchspin/jquery-plugin",
  "version": "1.0.0",
  "type": "module",
  "description": "jQuery wrapper for TouchSpin core (delegates to core, preserves API/events)",
  "license": "MIT",
  "sideEffects": false,
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "author": "TouchSpin Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/jquery-plugin"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/jquery-plugin#readme",
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../scripts/static-server.mjs",
    "build": "rm -rf dist && yarn run build:types && yarn run build:js && yarn run build:iife",
    "build:js": "tsup src/index.ts --format esm --sourcemap --target es2018 --tsconfig tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:iife": "tsup src/index.ts --format iife --global-name TouchSpinJQ --sourcemap --clean --target es2018 --tsconfig tsconfig.build.json",
    "build:test": "tsc -p tsconfig.testbuild.json && node ../../scripts/write-artifacts-manifest.mjs --dir devdist esmEntry=index.js",
    "typecheck": "tsc --noEmit",
    "test": "cd ../.. && playwright test packages/jquery-plugin/tests/",
    "test:ui": "cd ../.. && playwright test packages/jquery-plugin/tests/ --ui",
    "test:coverage": "cd ../.. && COVERAGE=1 playwright test packages/jquery-plugin/tests/"
  },
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      }
    }
  },
  "peerDependencies": {
    "jquery": ">=1.7"
  },
  "peerDependenciesMeta": {
    "jquery": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@touchspin/renderer-bootstrap3": "workspace:*",
    "@touchspin/renderer-bootstrap4": "workspace:*",
    "@touchspin/renderer-bootstrap5": "workspace:*",
    "@touchspin/renderer-tailwind": "workspace:*",
    "@types/jquery": "^3.5.30",
    "@types/node": "^22.7.4",
    "jquery": "^3.7.1",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2"
  }
}
