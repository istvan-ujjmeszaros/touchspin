{
  "name": "@touchspin/jquery-plugin",
  "version": "1.0.0",
  "type": "module",
  "description": "jQuery wrapper for TouchSpin core (delegates to core, preserves API/events)",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "dev": "vite dev --port 8866",
    "build": "vite build && mkdir -p dist && cp -f types/index.d.ts dist/index.d.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "publishConfig": {
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      }
    }
  },
  "devDependencies": {
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.0.0"
  }
}
