{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "stripInternal": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "types": ["jquery"],
    "paths": {
      "@touchspin/core": [
        "../../core/dist/index.d.ts"
      ],
      "@touchspin/core/renderer": [
        "../../core/dist/renderer.d.ts"
      ],
      "@touchspin/renderer-bootstrap3": [
        "../../renderers/bootstrap3/dist/index.d.ts"
      ],
      "@touchspin/renderer-bootstrap4": [
        "../../renderers/bootstrap4/dist/index.d.ts"
      ],
      "@touchspin/renderer-bootstrap5": [
        "../../renderers/bootstrap5/dist/index.d.ts"
      ],
      "@touchspin/renderer-tailwind": [
        "../../renderers/tailwind/dist/index.d.ts"
      ],
      "@touchspin/renderer-vanilla": [
        "../../renderers/vanilla/dist/index.d.ts"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/legacy/**/*"]
}
