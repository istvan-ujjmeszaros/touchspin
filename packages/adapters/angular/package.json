{
  "name": "@touchspin/angular",
  "version": "5.1.0-alpha.1",
  "private": true,
  "description": "Angular adapter for TouchSpin with per-renderer subpaths",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./bootstrap3": {
      "types": "./dist/bootstrap3/index.d.ts",
      "import": "./dist/esm2022/bootstrap3/touchspin-angular-bootstrap3.mjs",
      "default": "./dist/esm2022/bootstrap3/touchspin-angular-bootstrap3.mjs"
    },
    "./bootstrap4": {
      "types": "./dist/bootstrap4/index.d.ts",
      "import": "./dist/esm2022/bootstrap4/touchspin-angular-bootstrap4.mjs",
      "default": "./dist/esm2022/bootstrap4/touchspin-angular-bootstrap4.mjs"
    },
    "./bootstrap5": {
      "types": "./dist/bootstrap5/index.d.ts",
      "import": "./dist/esm2022/bootstrap5/touchspin-angular-bootstrap5.mjs",
      "default": "./dist/esm2022/bootstrap5/touchspin-angular-bootstrap5.mjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind/index.d.ts",
      "import": "./dist/esm2022/tailwind/touchspin-angular-tailwind.mjs",
      "default": "./dist/esm2022/tailwind/touchspin-angular-tailwind.mjs"
    },
    "./vanilla": {
      "types": "./dist/vanilla/index.d.ts",
      "import": "./dist/esm2022/vanilla/touchspin-angular-vanilla.mjs",
      "default": "./dist/esm2022/vanilla/touchspin-angular-vanilla.mjs"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "prepack": "yarn build",
    "build": "ng-packagr -p ng-package.json",
    "build:test": "ng-packagr -p ng-package.json",
    "build:watch": "ng-packagr -p ng-package.json --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && node ../../../scripts/coverage-open.mjs coverage/index.html"
  },
  "peerDependencies": {
    "@angular/common": ">=17.0.0",
    "@angular/core": ">=17.0.0",
    "@angular/forms": ">=17.0.0"
  },
  "dependencies": {
    "@touchspin/core": "workspace:*",
    "@touchspin/renderer-bootstrap3": "workspace:*",
    "@touchspin/renderer-bootstrap4": "workspace:*",
    "@touchspin/renderer-bootstrap5": "workspace:*",
    "@touchspin/renderer-tailwind": "workspace:*",
    "@touchspin/renderer-vanilla": "workspace:*",
    "rxjs": "^7.8.1",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/compiler-cli": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@playwright/test": "^1.54.2",
    "@types/jasmine": "^5.1.9",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27",
    "@types/node": "^22.7.4",
    "jasmine-core": "^5.12.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.2",
    "jsdom": "^27.0.0",
    "ng-packagr": "^18.0.0",
    "tsup": "^8.1.0",
    "typescript": "~5.5.4",
    "zone.js": "^0.14.0"
  },
  "keywords": [
    "touchspin",
    "angular",
    "spinner",
    "number-input",
    "bootstrap",
    "tailwind"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/touchspin.git",
    "directory": "packages/adapters/angular"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/touchspin/tree/main/packages/adapters/angular#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/istvan-ujjmeszaros"
  }
}
