{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/lib",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@touchspin/angular": ["./src/public-api.ts"],
      "@touchspin/angular/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "exclude": ["tests/**/*.ts", "**/*.spec.ts", "node_modules"]
}
