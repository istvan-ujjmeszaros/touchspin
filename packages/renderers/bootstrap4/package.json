{
  "name": "@touchspin/renderer-bootstrap4",
  "version": "5.0.0",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "description": "Bootstrap 4 renderer for TouchSpin",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "style": "dist/touchspin-bootstrap4.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./css": "./dist/touchspin-bootstrap4.css"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../../scripts/static-server.mjs",
    "build": "rm -rf dist && yarn run build:types && yarn run build:css && yarn run build:js",
    "build:js": "tsup src/index.ts --format esm --sourcemap --target es2020 --tsconfig tsconfig.build.json && node ../../../scripts/write-artifacts-manifest.mjs --dir dist esmEntry=index.js classModule=index.js",
    "build:css": "yarn exec sass src/styles/touchspin-bootstrap4.scss dist/touchspin-bootstrap4.css --style=expanded --no-source-map",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:test": "tsc -p tsconfig.testbuild.json && node ../../../scripts/write-artifacts-manifest.mjs --dir devdist esmEntry=index.js classModule=Bootstrap4Renderer.js && node ../../../scripts/extract-framework-assets.mjs --renderer bootstrap4",
    "typecheck": "tsc --noEmit",
    "watch:css": "sass src/styles/touchspin-bootstrap4.scss dist/touchspin-bootstrap4.css --style=expanded --source-map --watch",
    "test": "node ../../../scripts/page-locator-guard.mjs packages/renderers/bootstrap4/tests && PLAYWRIGHT_TSCONFIG=../../../tsconfig.playwright.json TS_BUILD_TARGET=dev playwright test --config=../../../playwright.config.ts packages/renderers/bootstrap4/tests --reporter=list",
    "test:ui": "PLAYWRIGHT_TSCONFIG=../../../tsconfig.playwright.json TS_BUILD_TARGET=dev playwright test --config=../../../playwright.config.ts packages/renderers/bootstrap4/tests --ui",
    "coverage": "PW_COVERAGE=1 TS_BUILD_TARGET=dev playwright test --config=../../../playwright-coverage.config.ts --project=chromium-coverage packages/renderers/bootstrap4/tests"
  },
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "author": "TouchSpin Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/renderers/bootstrap4"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/renderers/bootstrap4#readme",
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./css": "./dist/touchspin-bootstrap4.css"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.7.4",
    "bootstrap": "4.6.2",
    "sass": "^1.77.8",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2"
  }
}
