{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./devdist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./devdist/.tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@touchspin/core": ["../../core/dist/index.d.ts"],
      "@touchspin/core/renderer": ["../../core/dist/renderer.d.ts"]
    }
  },
  "include": ["src/**/*"]
}

