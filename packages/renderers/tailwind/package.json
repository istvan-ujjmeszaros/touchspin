{
  "name": "@touchspin/renderer-tailwind",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "description": "Tailwind renderer for TouchSpin",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "style": "dist/touchspin-tailwind.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./css": "./dist/touchspin-tailwind.css"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../../scripts/static-server.mjs",
    "build": "yarn run build:types && yarn run build:js",
    "build:js": "tsup src/index.ts --format esm --sourcemap --clean --target es2020",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:test": "tsc -p tsconfig.testbuild.json",
    "typecheck": "tsc --noEmit",
    "watch:css": "sass src/styles/touchspin-tailwind.scss dist/touchspin-tailwind.css --style=expanded --source-map --watch"
  },
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "author": "TouchSpin Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/renderers/tailwind"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/renderers/tailwind#readme",
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./css": "./dist/touchspin-tailwind.css"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.7.4",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.0.0"
  }
}
