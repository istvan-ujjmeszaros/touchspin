{
  "name": "@touchspin/renderer-vanilla",
  "version": "1.0.0",
  "description": "Vanilla CSS-based renderer for TouchSpin components without framework dependencies",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "types": "dist/index.d.ts",
  "style": "dist/touchspin-vanilla.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./css": "./dist/touchspin-vanilla.css",
    "./themes/vanilla": "./src/themes/vanilla.css"
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./css": "./dist/touchspin-vanilla.css",
      "./themes/vanilla": "./src/themes/vanilla.css"
    }
  },
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../../scripts/static-server.mjs",
    "build": "rm -rf dist && yarn run build:types && yarn run build:js",
    "build:js": "tsup src/index.ts --format esm --sourcemap --target es2020 --tsconfig tsconfig.build.json && node ../../../scripts/write-artifacts-manifest.mjs --dir dist esmEntry=index.js classModule=index.js css=index.css",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:test": "tsc -p tsconfig.testbuild.json && node ../../../scripts/write-artifacts-manifest.mjs --dir devdist esmEntry=index.js classModule=VanillaRenderer.js css=index.css",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "watch:css": "sass src/themes/vanilla.css dist/touchspin-vanilla.css --style=expanded --source-map --watch",
    "clean": "rm -rf dist",
    "test": "PLAYWRIGHT_TSCONFIG=../../../tsconfig.playwright.json TS_BUILD_TARGET=dev playwright test --config=../../../playwright.config.ts packages/renderers/vanilla/tests",
    "coverage": "PW_COVERAGE=1 TS_BUILD_TARGET=dev playwright test --config=../../../playwright-coverage.config.ts --project=chromium-coverage packages/renderers/vanilla/tests"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.7.4",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "touchspin",
    "spinner",
    "input",
    "renderer",
    "css",
    "vanilla",
    "accessibility",
    "framework-agnostic"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "dependencies": {
    "@touchspin/core": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/renderers/vanilla"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/renderers/vanilla#readme"
}
