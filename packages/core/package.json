{
  "name": "@touchspin/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core logic for TouchSpin (framework-agnostic)",
  "license": "MIT",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.js"
    },
    "./test-helpers": {
      "types": "./test-helpers/index.ts",
      "import": "./test-helpers/index.ts"
    },
    "./test-helpers/*": {
      "types": "./test-helpers/*",
      "import": "./test-helpers/*"
    },
    "./test-helpers/renderers": {
      "types": "./test-helpers/renderers/index.ts",
      "import": "./test-helpers/renderers/index.ts"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./renderer": {
        "types": "./dist/renderer.d.ts",
        "import": "./dist/renderer.js"
      }
    }
  },
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../scripts/static-server.mjs",
    "build": "yarn run build:types && yarn run build:js",
    "build:js": "tsup src/index.ts src/renderer.ts --format esm --sourcemap --clean --target es2020",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:test": "tsc -p tsconfig.testbuild.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@touchspin/vanilla-renderer": "workspace:*",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2"
  },
  "author": "TouchSpin Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/core#readme"
}
