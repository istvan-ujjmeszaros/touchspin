{
  "name": "@touchspin/core",
  "version": "5.0.0",
  "type": "module",
  "description": "Core logic for TouchSpin (framework-agnostic)",
  "license": "MIT",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.js"
    },
    "./test-helpers": {
      "types": "./tests/__shared__/helpers/index.ts",
      "import": "./tests/__shared__/helpers/index.ts"
    },
    "./test-helpers/*": {
      "types": "./tests/__shared__/helpers/*",
      "import": "./tests/__shared__/helpers/*"
    },
    "./test-helpers/renderers": {
      "types": "./tests/__shared__/helpers/renderers/index.ts",
      "import": "./tests/__shared__/helpers/renderers/index.ts"
    },
    "./tests/__shared__/fixtures": {
      "types": "./tests/__shared__/fixtures/index.ts",
      "import": "./tests/__shared__/fixtures/index.ts"
    }
  },
  "typesVersions": {
    "*": {
      "renderer": [
        "./dist/renderer.d.ts"
      ]
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./renderer": {
        "types": "./dist/renderer.d.ts",
        "import": "./dist/renderer.js"
      }
    }
  },
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../scripts/static-server.mjs",
    "build": "rm -rf dist && yarn run build:types && yarn run build:js",
    "build:js": "tsup src/index.ts src/renderer.ts --format esm --sourcemap --target es2020 --tsconfig tsconfig.build.json && node ../../scripts/write-artifacts-manifest.mjs --dir dist esmEntry=index.js rendererEntry=renderer.js",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:test": "tsc -p tsconfig.testbuild.json && node ../../scripts/write-artifacts-manifest.mjs --dir devdist esmEntry=index.js rendererEntry=renderer.js",
    "watch": "concurrently \"tsc -p tsconfig.build.json --watch --emitDeclarationOnly\" \"tsup src/index.ts src/renderer.ts --format esm --watch --sourcemap --target es2020 --tsconfig tsconfig.build.json\"",
    "watch:test": "tsc -p tsconfig.testbuild.json --watch --preserveWatchOutput",
    "typecheck": "tsc --noEmit",
    "test": "node ../../scripts/pre-test.mjs packages/core/tests && PLAYWRIGHT_TSCONFIG=../../tsconfig.playwright.json TS_BUILD_TARGET=dev playwright test --config=../../playwright.config.ts packages/core/tests --reporter=list",
    "test:ui": "PLAYWRIGHT_TSCONFIG=../../tsconfig.playwright.json TS_BUILD_TARGET=dev playwright test --config=../../playwright.config.ts packages/core/tests --ui",
    "coverage": "PW_COVERAGE=1 TS_BUILD_TARGET=dev playwright test --config=../../playwright-coverage.config.ts --project=chromium-coverage packages/core/tests"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@touchspin/renderer-vanilla": "workspace:*",
    "@types/node": "^22.7.4",
    "tsup": "^8.1.0",
    "typescript": "^5.7.2"
  },
  "author": "TouchSpin Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/core#readme"
}
