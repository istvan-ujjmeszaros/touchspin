{
  "name": "@touchspin/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core logic for TouchSpin (framework-agnostic)",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.cjs"
    },
    "./renderer": {
      "types": "./src/renderer.ts",
      "import": "./src/renderer.ts",
      "require": "./dist/renderer.cjs"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./renderer": {
        "types": "./dist/renderer.d.ts",
        "import": "./dist/renderer.mjs",
        "require": "./dist/renderer.cjs"
      }
    }
  },
  "scripts": {
    "dev": "vite dev --port 8866",
    "build": "vite build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.0.0"
  }
}
