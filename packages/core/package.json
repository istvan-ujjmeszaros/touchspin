{
  "name": "@touchspin/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core logic for TouchSpin (framework-agnostic)",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.cjs"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./src/renderer.ts",
      "require": "./dist/renderer.cjs"
    },
    "./test-helpers": {
      "types": "./test-helpers/index.ts",
      "import": "./test-helpers/index.ts"
    },
    "./test-helpers/*": {
      "types": "./test-helpers/*",
      "import": "./test-helpers/*"
    },
    "./test-helpers/renderers": {
      "types": "./test-helpers/renderers/index.ts",
      "import": "./test-helpers/renderers/index.ts"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./renderer": {
        "types": "./dist/renderer.d.ts",
        "import": "./dist/renderer.mjs",
        "require": "./dist/renderer.cjs"
      }
    }
  },
  "scripts": {
    "prepack": "yarn build",
    "dev": "node ../../scripts/static-server.mjs",
    "build": "echo 'Use root build:prod'",
    "build:test": "tsc -p tsconfig.testbuild.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@touchspin/vanilla-renderer": "workspace:*",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.0.0"
  },
  "author": "TouchSpin Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/bootstrap-touchspin/tree/main/packages/core#readme"
}
