{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./devdist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "types": [],
    "incremental": true,
    "tsBuildInfoFile": "./devdist/.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
