{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["vitest/globals", "@playwright/test"]
  },
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*.ts",
    "./vitest.config.ts",
    "./playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
