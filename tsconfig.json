{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@touchspin/core": ["packages/core/src/index.ts"],
      "@touchspin/core/renderer": ["packages/core/src/renderer.ts"],
      "@touchspin/core/test-helpers/*": ["packages/core/test-helpers/*"],
      "@touchspin/jquery-plugin/test-helpers": ["packages/jquery-plugin/test-helpers/index.ts"],
      "@touchspin/jquery-plugin/test-helpers/*": ["packages/jquery-plugin/test-helpers/*"]
    }
  },
  "include": [
    "packages/core/**/*.ts",
    "packages/web-component/**/*.ts",
    "packages/jquery-plugin/**/*.ts",
    "packages/renderers/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports",
    "tmp",
    
    "**/playwright*.config.*",
    "**/types/**",
    "**/tests/**",
    "**/__tests__/**"
  ]
}
