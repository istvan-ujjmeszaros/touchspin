{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "@playwright/test"],
    "baseUrl": "."
  },
  "include": [
    "packages/core/**/*.ts",
    "packages/vanilla-renderer/**/*.ts",
    "packages/web-component/**/*.ts",
    "packages/jquery-plugin/**/*.ts",
    "packages/renderers/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports",
    "tmp",
    "vite.config.ts",
    "packages/**/vite.config.ts"
  ]
}
